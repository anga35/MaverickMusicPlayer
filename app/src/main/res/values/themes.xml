<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MaverickMusicPlayer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2E318D</item>
        <item name="colorPrimaryVariant">#2E318D</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="CustomNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar"

        >
        <item name="android:windowBackground">@drawable/splash_screen_file</item>
        <item name="android:statusBarColor">#2E318D</item>

        <item name="android:colorEdgeEffect">#DCFFFFFF</item>
    </style>

    <style name="CustomNoActionBar1" parent="Theme.MaterialComponents.Light.NoActionBar"

        >

        <item name="android:statusBarColor">#2E318D</item>

        <item name="android:colorEdgeEffect">#DCFFFFFF</item>
    </style>


    <style name="ToolBarTheme" parent="Theme.MaterialComponents">
        <item
            name="colorControlNormal">@color/white</item>


    </style>

    <style name="customProgressBar" parent="Theme.MaterialComponents">

        <item name="colorControlActivated">@color/white</item>

    </style>
    
    <style name="CustomBottomNavigationFont" >

        <item name="fontFamily">@font/montserrat</item>

    </style>
    <style name="CustomTabLayoutFont" parent="android:style/TextAppearance.Widget.TabWidget">

        <item name="fontFamily">@font/montserrat</item>

    </style>

    <style name="CustomScrollStyle">

        <item name="android:colorEdgeEffect">#FFFFFF</item>

    </style>
    
</resources>